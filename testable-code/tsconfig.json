{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "strict": true,
        "noImplicitReturns": true,
        "noImplicitAny": true,
        "module": "es6",
        "moduleResolution": "node",
        "target": "es5",
        "allowJs": true,
        "noUnusedLocals": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noUnusedParameters": true,
        "skipLibCheck": true,
        "lib": [
            "dom", "es5", "es6", "scripthost"
        ],
        "types": ["jasmine", "jasminewd2", "jquery"],
      "allowSyntheticDefaultImports": true
    },
    "include": [
        "./src/**/*"
    ]
}
