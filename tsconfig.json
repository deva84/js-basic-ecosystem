{
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "./build",
    "rootDir": "./src",
    "allowJs": false,
    "alwaysStrict": true,
    "downlevelIteration": true,
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "pretty": true,
    "sourceMap": true,
    "strictNullChecks": false,
    "target": "es6",
    "allowUnreachableCode": false,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/**/*.spec.ts",
    "node_modules"
  ]
}
